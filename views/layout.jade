!!!

title = title || null
path = path || null

mixin navitem(navpath,navname)
  if navpath == path
    li.active: a(href=navpath)= navname
  else
    li: a(href=navpath)= navname

html
  head
    meta(charset="utf-8")

    if title
      title= title + ' - opensets.org'
    else
      title opensets.org
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="/bootstrap.css", rel="stylesheet")
    style
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }

    // HTML5 shim, for IE6-8 support of HTML5 elements
    //if lt IE 9
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    block head
  body
    nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand(href="/") opensets.org
          ul.nav
            +navitem('/','Home')
            +navitem('/about','About')
    #content
      block screenwide
        .container
          block content
